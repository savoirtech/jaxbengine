<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xmlns:cm="http://aries.apache.org/blueprint/xmlns/blueprint-cm/v1.1.0"
           xsi:schemaLocation="http://www.osgi.org/xmlns/blueprint/v1.0.0 http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd"
    >

    <!-- Globalized engine context for all JAXB needs -->
    <cm:property-placeholder persistent-id="com.savoirtech.tycho.jaxb.pool" id="jaxb-pool" update-strategy="reload">
        <cm:default-properties>
            <cm:property name="jaxb.class.packages" value="com.savoirtech.common.messages,com.savoirtech.common.data"/>
        </cm:default-properties>
    </cm:property-placeholder>

    <bean id="engine" class="com.savoirtech.jaxb.engine.JaxbEngineProvider">
        <argument value="${jaxb.class.packages}"/>
    </bean>

    <service ref="engine" interface="com.savoirtech.jaxb.engine.JaxbEngine"/>

</blueprint>
